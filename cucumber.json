{
    "default": {
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "paths": [
            "src/test/features/*.feature"
        ],
        "dryRun": false,
        "require": [
            "src/test/steps/*.ts",
            "src/helper/hooks.ts"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "format": [
            "progress-bar",
            "html:test-results/cucumber-report.html",
            "json:test-results/cucumber-report.json"
        ],
        "ignoreFailure": true
    }
}